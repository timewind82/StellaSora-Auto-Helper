{
    // 本文件主要定义了通用 UI 的行为和显示内容
    // 可参考文档和示例添加更多您需要的功能
    // 文档：https://maafw.xyz/docs/3.3-ProjectInterfaceV2
    // 示例：https://github.com/MaaXYZ/MaaFramework/blob/main/sample/interface.json
    "interface_version": 2,
    "name": "StellaSora Auto Helper",
    "description": "星塔旅人自动助手（StellaSora-Auto-Helper）提供自动签到、清理日常等功能，由 MaaFramework 强力驱动",
    "contact": "无",
    "license": "MIT",
    "welcome": "首次使用！欢迎使用 StellaSora Auto Helper",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/SodaCodeSave/StellaSora-Auto-Helper",
    "version": "0.0.1",
    "custom_title": "StellaSora Auto Helper",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    "mirrorchyan_multiplatform": false,
    "agent": {
        "child_exec": "python",
        "child_args": [
            "../agent/main.py"
        ]
    },
    "controller": [
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "xtlr",
                // 截图及控制方式，请根据项目实际情况修改
                // 文档: https://maafw.xyz/docs/2.4-ControlMethods
                "screencap": "FramePool", // 截图方式
                "mouse": "SendMessageWithCursorPos", // 鼠标控制方式
                "keyboard": "SendMessageWithCursorPos" // 键盘控制方式
            }
        },
        {
            "name": "安卓端",
            "type": "Adb",
            "display_short_side": 720 // 默认缩放分辨率的短边长度
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "{PROJECT_DIR}/resource"
            ]
        }
        // {
        //     "name": "B 服",
        //     "path": [
        //         "{PROJECT_DIR}/resource",
        //         "{PROJECT_DIR}/resource_bilibili"
        //     ]
        // }
    ],
    "task": [
        {
            "name": "登录游戏",
            "entry": "登录"
        },
        {
            "name": "爬塔",
            "entry": "爬塔"
        }
    ]
}